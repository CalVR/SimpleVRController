<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/accelData"
            android:text="@string/accel"
            android:textColor="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/ipText"
            android:layout_width="fill_parent"
            android:text="@string/ip"
            android:textColor="#ffffff"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/sensorText"
            android:paddingLeft="10dip"
            android:text="@string/sensor"
            android:textColor="#ffffff"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/velocity"
            android:text="@string/velocity"
            android:textColor="#ffffff"
            android:layout_height="70dp" />
        
        <Button
            android:id="@+id/flip"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/flip" />
        
        <Button
            android:id="@+id/reset"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/reset" />
        
        <Button
            android:id="@+id/recal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/recal" />
        
        <Button
            android:id="@+id/htrackSelect"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/hTracking" />
        
        <Button
            android:id="@+id/deviceOrientationSelect"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/deviceOrientation" />

    </LinearLayout>

    <View
        android:id="@+id/touchControl"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="#66666666" />

    <View
        android:id="@+id/speed"
        android:layout_width="100dp"
        android:layout_height="fill_parent" 
        android:background="#CCAAAAAA"/>

</LinearLayout>